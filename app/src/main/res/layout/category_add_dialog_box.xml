<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true">

    <include
        android:id="@+id/loadingHoriBar"
        layout="@layout/loading_screen"
        android:visibility="visible"
        android:layout_height="4dp"
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"/>

    <ScrollView
        android:layout_below="@+id/loadingHoriBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="15dp"
        android:paddingBottom="15dp">


        <android.support.design.widget.TextInputLayout
            android:id="@+id/cateDialogTitlePar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:theme="@style/TextLabel">

            <EditText
                android:id="@+id/catDialogTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Title"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:maxLines="1"
                android:textCursorDrawable="@color/txtFocus" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/cateDialogDescPar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:theme="@style/TextLabel">

            <EditText
                android:id="@+id/catDialogDes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Description (Optional)"
                android:textCursorDrawable="@color/txtFocus" />
        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/cateDialogAmountPar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:theme="@style/TextLabel">

            <EditText
                android:id="@+id/catDialogAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Estimated Budget"
                android:inputType="numberDecimal"
                android:maxLines="1"
                android:textCursorDrawable="@color/txtFocus" />
        </android.support.design.widget.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="end"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/catDialCancelBtn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="20dp"
                android:paddingHorizontal="10dp"
                android:paddingVertical="5dp"
                android:text="CANCEL"
                android:textColor="@color/txtFocus" />

            <TextView
                android:id="@+id/catDialOkBtn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingHorizontal="10dp"
                android:paddingVertical="5dp"
                android:text="OK"
                android:textColor="@color/txtFocus" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/catDialogHelpBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Need Help?" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/catDialogHelpBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ssssssssssssssssssssssssssssssss" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ssssssssssssssssssssssssssssssss" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ssssssssssssssssssssssssssssssss" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ssssssssssssssssssssssssssssssss" />
        </LinearLayout>
    </LinearLayout>

    </ScrollView>

</RelativeLayout>