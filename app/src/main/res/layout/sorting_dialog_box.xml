<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:paddingHorizontal="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Display preferences"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"/>

        <TextView
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sort by:"
            />
         <RadioGroup
             android:layout_marginTop="5dp"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/nameRadioBtn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Name"
                        android:maxLines="1"
                        android:layout_marginRight="5dp"/>

                    <RadioButton
                        android:id="@+id/amountRadioBtn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginRight="5dp"
                        android:text="Amount"
                        android:maxLines="1"/>

                <RadioButton
                    android:id="@+id/dateRadioBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:text="Date"/>

            </RadioGroup>

        <RadioGroup
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/ascendantBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ascendant"/>

            <RadioButton
                android:id="@+id/descendantBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Descendant"/>

        </RadioGroup>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <TextView
                android:id="@+id/cancelBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="CANCEL"
                android:textColor="@color/txtFocus"
                android:paddingVertical="7dp"
                android:paddingHorizontal="15dp"/>

            <TextView
                android:id="@+id/okBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OK"
                android:textColor="@color/txtFocus"
                android:paddingVertical="7dp"
                android:paddingHorizontal="15dp"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>