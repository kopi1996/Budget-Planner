<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="colorControlNormal">#111111</item>
        <item name="colorControlActivated">@color/txtFocus</item>
        <item name="colorControlHighlight">@color/txtFocus</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="HintInputTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/txtFocus</item>
        <item name="android:textSize">13sp</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>
    <style name="InputTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/txtFocus</item>
        <item name="android:textColorHint">#B4B4B4</item>
        <item name="android:textSize">15sp</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ErrorTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#ffff0000</item>
        <item name="android:textColorHint">#ffff0000</item>
        <item name="android:textSize">12sp</item>
        <item name="colorAccent">#ffff0000</item>
    </style>

    <style name="TextLabel" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textColorHint">#B4B4B4</item>
        <item name="android:textSize">15sp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">#B4B4B4</item>
        <item name="colorControlActivated">@color/txtFocus</item>

    </style>

    <style name="spinner_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/gradient_spinner</item>

        <item name="android:layout_margin">1dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

    <style name="pick_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/category_pict</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

    <style name="LoadingProgress" parent="@style/Theme.AppCompat">
        <item name="colorAccent">#0000A0</item>
    </style>

    <style name="MyDialogTheme" parent="android:Theme.Dialog">
        <item name="windowMinWidthMajor">100%</item>
        <item name="windowMinWidthMinor">100%</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>

        <item name="android:background">#F7F5F5</item>
    </style>

    <style name="DialogTitleTheme" parent="Theme.AppCompat.Dialog">
        <item name="windowMinWidthMajor">100%</item>
        <item name="windowMinWidthMinor">100%</item>
        <item name="android:windowNoTitle">false</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:textColorPrimary">#181818</item>
        <item name="android:textColor">#181818</item>
        <item name="android:background">#F7F5F5</item>
    </style>

</resources>
